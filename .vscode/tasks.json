{
    "version": "2.0.0",
    "tasks": [
        // Flutter Tasks
        {
            "label": "ðŸŽ¯ Flutter: Get Packages",
            "type": "shell",
            "command": "flutter",
            "args": ["pub", "get"],
            "options": {
                "cwd": "${workspaceFolder}/pet_health_tracker"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "ðŸŽ¯ Flutter: Run Debug",
            "type": "shell",
            "command": "flutter",
            "args": ["run", "--debug"],
            "options": {
                "cwd": "${workspaceFolder}/pet_health_tracker"
            },
            "group": "build",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "isBackground": true
        },
        {
            "label": "ðŸŽ¯ Flutter: Test",
            "type": "shell",
            "command": "flutter",
            "args": ["test"],
            "options": {
                "cwd": "${workspaceFolder}/pet_health_tracker"
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "ðŸŽ¯ Flutter: Analyze",
            "type": "shell",
            "command": "flutter",
            "args": ["analyze"],
            "options": {
                "cwd": "${workspaceFolder}/pet_health_tracker"
            },
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        // Backend Tasks
        {
            "label": "ðŸš€ Start FastAPI Dev Server",
            "type": "shell",
            "command": "${workspaceFolder}/venv/bin/python",
            "args": [
                "-m",
                "uvicorn",
                "app.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "ðŸš€ Install Dependencies",
            "type": "shell",
            "command": "${workspaceFolder}/venv/bin/pip",
            "args": [
                "install",
                "-r",
                "requirements.txt"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "${workspaceFolder}/venv/bin/python",
            "args": [
                "test_api.py"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}"
                }
            },
            "problemMatcher": []
        },
        {
            "label": "Format Code (Black)",
            "type": "shell",
            "command": "${workspaceFolder}/venv/bin/python",
            "args": [
                "-m",
                "black",
                "app/",
                "test_api.py"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Lint Code (Flake8)",
            "type": "shell",
            "command": "${workspaceFolder}/venv/bin/python",
            "args": [
                "-m",
                "flake8",
                "app/",
                "--max-line-length=88",
                "--extend-ignore=E203,W503"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Type Check (MyPy)",
            "type": "shell",
            "command": "${workspaceFolder}/venv/bin/python",
            "args": [
                "-m",
                "mypy",
                "app/",
                "--ignore-missing-imports"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Generate Requirements",
            "type": "shell",
            "command": "${workspaceFolder}/venv/bin/pip",
            "args": [
                "freeze",
                ">",
                "requirements.txt"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Open API Docs",
            "type": "shell",
            "command": "open",
            "args": [
                "http://localhost:8000/docs"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Setup Virtual Environment",
            "type": "shell",
            "command": "python3",
            "args": [
                "-m",
                "venv",
                "venv"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "new"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Clean Python Cache",
            "type": "shell",
            "command": "find",
            "args": [
                ".",
                "-type",
                "d",
                "-name",
                "__pycache__",
                "-exec",
                "rm",
                "-rf",
                "{}",
                "+",
                "2>/dev/null",
                "||",
                "true"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        // Combined Development Tasks
        {
            "label": "ðŸ”„ Start Full Development Environment",
            "dependsOrder": "parallel",
            "dependsOn": [
                "ðŸŽ¯ Flutter: Run Debug",
                "ðŸš€ Start FastAPI Dev Server"
            ]
        },
        {
            "label": "ðŸ“¦ Setup: Install All Dependencies",
            "dependsOrder": "sequence",
            "dependsOn": [
                "ðŸš€ Install Dependencies",
                "ðŸŽ¯ Flutter: Get Packages"
            ]
        },
        {
            "label": "ðŸ§ª Test: Run All Tests",
            "dependsOrder": "parallel",
            "dependsOn": [
                "ðŸŽ¯ Flutter: Test",
                "Run Tests"
            ]
        }
    ]
}