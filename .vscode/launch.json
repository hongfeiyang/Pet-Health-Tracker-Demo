{
  "version": "0.2.0",
  "configurations": [
    // Flutter Debug Configurations
    {
      "name": "ğŸ¯ Flutter: Debug",
      "type": "dart",
      "request": "launch",
      "program": "pet_health_tracker/lib/main.dart",
      "cwd": "${workspaceFolder}/pet_health_tracker",
      "flutterMode": "debug",
      "console": "debugConsole",
      "args": ["--enable-asserts"]
    },
    {
      "name": "ğŸ¯ Flutter: Debug with Backend",
      "type": "dart",
      "request": "launch",
      "program": "pet_health_tracker/lib/main.dart",
      "cwd": "${workspaceFolder}/pet_health_tracker",
      "flutterMode": "debug",
      "console": "debugConsole",
      "args": [
        "--enable-asserts",
        "--dart-define=API_BASE_URL=http://localhost:8000",
        "--dart-define=USE_MOCK_API=false"
      ]
    },
    {
      "name": "ğŸ§ª Flutter: Test Debug",
      "type": "dart",
      "request": "launch",
      "program": "pet_health_tracker/test/widget_test.dart",
      "cwd": "${workspaceFolder}/pet_health_tracker",
      "flutterMode": "debug",
      "console": "debugConsole"
    },
    // Backend Debug Configurations
    {
      "name": "ğŸš€ FastAPI Dev Server",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8000"
      ],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/venv/bin/python"
    },
    {
      "name": "ğŸš€ FastAPI Production Server",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--workers",
        "1"
      ],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/venv/bin/python"
    },
    {
      "name": "ğŸ” Debug FastAPI Server",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "app.main:app",
        "--reload",
        "--host",
        "127.0.0.1",
        "--port",
        "8000",
        "--log-level",
        "debug"
      ],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/venv/bin/python",
      "stopOnEntry": false,
      "debugOptions": ["RedirectOutput"]
    },
    {
      "name": "ğŸ§ª Run API Tests",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/test_api.py",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/venv/bin/python"
    },
    {
      "name": "ğŸ” Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/venv/bin/python"
    },
    {
      "name": "ğŸ—ƒï¸ Database Shell",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/manage_db.py",
      "args": ["shell"],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "cwd": "${workspaceFolder}",
      "python": "${workspaceFolder}/venv/bin/python"
    }
  ],
  "compounds": [
    {
      "name": "ğŸ”„ Debug Full Stack",
      "configurations": [
        "ğŸ¯ Flutter: Debug with Backend",
        "ğŸš€ FastAPI Dev Server"
      ]
    },
    {
      "name": "ğŸ§ª Debug All Tests",
      "configurations": ["ğŸ§ª Flutter: Test Debug", "ğŸ§ª Run API Tests"]
    }
  ]
}
